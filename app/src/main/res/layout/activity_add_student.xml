<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Thêm mới sinh viên"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/birth_text"
            android:text="MSSV:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/text_mssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ms_text"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:hint="mssv"/>
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên: "
            android:layout_alignRight="@id/birth_text"
            android:layout_below="@id/text_mssv"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="họ và tên"
            android:textSize="24sp"
            android:layout_toRightOf="@id/name_text"
            android:layout_below="@id/text_mssv"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/birth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: "
            android:layout_below="@id/text_name"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/text_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ngày sinh"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/birth_text"
            android:layout_below="@id/text_name"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/birth_text"
            android:text="Email: "
            android:layout_below="@id/text_birthday"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="email"
            android:layout_alignParentRight="true"
            android:textSize="24sp"
            android:layout_toRightOf="@id/email_text"
            android:layout_below="@id/text_birthday"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:layout_alignRight="@id/birth_text"
            android:layout_below="@id/text_email"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="địa chỉ"
            android:layout_alignParentRight="true"
            android:textSize="24sp"
            android:layout_toRightOf="@id/address_text"
            android:layout_below="@id/text_email"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_below="@id/text_address"
            android:layout_alignRight="@id/text_address"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:layout_toLeftOf="@id/btn_add"
            android:layout_below="@id/text_address"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</LinearLayout>